@model List<Assig1.Models.Expiation>

<div class="text-dark bg-gradient bg-warning p-2 my-2 border rounded">
    <h2>Index</h2>
</div>

<form method="get" asp-action="Index" asp-controller="Expiations">
    <div class="form-group">
        <label for="searchText">Search by LSA Code: </label>
        <input type="text" id="searchText" name="searchText" class="form-control" />
    </div>
    <div class="form-group">
        <label for="offenceCode">Search by Offence Code: </label>
        <input type="text" id="offenceCode" name="offenceCode" class="form-control" />
    </div>
    <button type="submit">Search</button>
</form>

<h3>Expiations</h3>
@if (Model == null)
{
    <p>Search for an offence!</p>
}
else if (!Model.Any())
{
    <p>No offences found.</p>
}
else
{
    @foreach (var expiation in Model)
    {
        <li>
            @expiation.LsaCode - @expiation.OffenceCode
        </li>
    }

    <h3>Number of records: @Model.Count()</h3>
}