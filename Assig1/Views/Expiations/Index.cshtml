@model IEnumerable<Assig1.Models.ExpiationCategory>

<div class="text-dark bg-gradient bg-warning p-2 my-2 border rounded">
    <h2>Expiations Index</h2>
</div>

<form asp-controller="Expiations" asp-action="Index" method="post">
    <div class="form-group">
        <label for="searchBox">Search:</label>
        <input type="text" id="searchBox" name="searchText" class="form-control" maxlength="100" placeholder="Search for expiation categories" title="Search" value="@ViewBag.SearchText"/>
        <button type="submit" class="btn btn-primary mt-2">Search</button>
    </div>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>

<h3>Expiation Categories</h3>
@if(ViewBag.ItemCount > 0)
{
    <p>Number of items found: @ViewBag.ItemCount</p>
}
@if (!Model.Any())
{
    <p>No items found.</p>
}
else
{
    <ul>
        @foreach (var category in Model)
        {
            <li>
                @category.CategoryName
            </li>
        }
    </ul>
}